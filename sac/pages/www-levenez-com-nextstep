				<!-- Developpement -->
				<div class="corps">
					<table border="0" cellpadding="0" cellspacing="0">
						<tr><td class="cadre_hg"></td><td class="cadre_hc">D&eacute;veloppement</td><td class="cadre_hd"></td></tr>
